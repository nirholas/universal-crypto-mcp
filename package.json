{
  "name": "@nirholas/universal-crypto-mcp",
  "version": "0.1.0",
  "description": "Universal MCP server for all EVM-compatible networks including BSC, opBNB, Arbitrum, Ethereum, Polygon, Base, Optimism and more.",
  "type": "module",
  "main": "./dist/lib.js",
  "exports": {
    ".": {
      "import": "./dist/lib.js"
    }
  },
  "scripts": {
    "start": "node dist/index.js",
    "start:sse": "npm run start -- --sse",
    "start:http": "npm run start -- --http",
    "dev": "tsx watch src/index.ts",
    "dev:sse": "tsx watch src/index.ts --sse",
    "dev:http": "tsx watch src/index.ts --http",
    "build": "tsup",
    "clean": "rm -rf dist coverage .tsbuildinfo",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:inspector": "npx @modelcontextprotocol/inspector tsx src/index.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "tsc --noEmit",
    "ci": "npm run lint && npm run test:coverage && npm run build",
    "docs": "typedoc --out docs/api src/index.ts",
    "docs:watch": "typedoc --watch --out docs/api src/index.ts"
  },
  "bin": {
    "universal-crypto-mcp": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": {
    "name": "nich",
    "url": "https://github.com/nirholas"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nirholas/universal-crypto-mcp"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai-agents",
    "claude",
    "cursor",
    "chatgpt",
    "llm",
    "evm",
    "ethereum",
    "arbitrum",
    "polygon",
    "base",
    "optimism",
    "bsc",
    "bnb-chain",
    "opbnb",
    "crypto",
    "defi",
    "blockchain",
    "web3",
    "smart-contracts",
    "token-swap",
    "cross-chain",
    "dex",
    "bridge"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "@solana/spl-token": "^0.4.1",
    "@solana/web3.js": "^1.87.6",
    "@ton/core": "^0.63.0",
    "@ton/crypto": "^3.3.0",
    "@ton/ton": "^16.1.0",
    "@xchainjs/xchain-bitcoin": "^2.0.9",
    "@xchainjs/xchain-client": "^2.0.9",
    "@xchainjs/xchain-doge": "^2.0.9",
    "@xchainjs/xchain-litecoin": "^2.0.9",
    "@xchainjs/xchain-thorchain": "^3.0.13",
    "@xchainjs/xchain-thorchain-query": "^2.0.15",
    "@xchainjs/xchain-util": "^2.0.5",
    "bignumber.js": "^9.1.2",
    "bs58": "^6.0.0",
    "ccxt": "^4.4.0",
    "cors": "^2.8.5",
    "cross-fetch": "^4.0.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "indicatorts": "^2.1.1",
    "mime": "^4.0.7",
    "reflect-metadata": "^0.2.2",
    "viem": "^2.44.4",
    "xrpl": "^4.5.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.6",
    "@types/node": "^20.19.30",
    "@vitest/coverage-v8": "^4.0.17",
    "prettier": "3.2.4",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typedoc": "^0.28.16",
    "typescript": "^5.0.0",
    "vitest": "^4.0.17"
  },
  "license": "Apache-2.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
